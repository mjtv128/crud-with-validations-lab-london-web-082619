<%if @song.errors.any? %>
<h3><%= The following errors prevented the song from getting created %></h3>
<ul>
<li><%= @song.errors.full_messages.each do |msg| %></li>
<%= msg %>
<% end %>
</ul>
<% end %>

<p><%= form_for(@song) do |f| %>
<%= f.label "Song Title" %>
<%= f.text_field :title %><br>

<%= f.label "Is it released?" %>
<%= f.check_box :released %><br>

<%= f.label "Release Year" %>
<%= f.text_field :release_year %><br>

<%= f.label "Artist Name" %>
<%= f.text_field :artist_name %><br>

<%= f.label "Genre" %>
<%= f.text_field :genre %><br></p>

<%= f.submit %><br>

<% end  %>

<%= link_to "Back to All Songs", root_path %>
